/*
 * dotfiles
 * neovim - coc completion engine config
*/

{
  // project root directory detection patterns
  "coc.preferences.rootPatterns": [
    ".git",
    ".hg",
    ".projections.json",
    ".vim"
  ],
  // use quickfix list for jump location
  "coc.preferences.useQuickfixForLocations": true,
  // push diagnostics into location list
  "diagnostic.locationlistUpdate": true
}
